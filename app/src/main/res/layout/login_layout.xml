<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0acffe">

    <ImageView
        android:layout_width="332dp"
        android:layout_height="325dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        app:srcCompat="@drawable/checklistlogo" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="329dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="354dp"
        android:layout_marginEnd="40dp"
        android:background="#fff"
        android:hint="Email"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="329dp"
        android:layout_height="66dp"
        android:paddingLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="239dp"
        android:background="#fff"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/rounded_corners"
        android:text="Login"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/rounded_corners"
        android:text="Sign-Up"
        android:textColor="#FFF" />

    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="67dp"
        android:text="Not a member, press Signup"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userNotFound"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="217dp"
        android:text="User Not Register"
        android:visibility="invisible"
        android:textColor="#F00"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/emptyEmail"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="217dp"
        android:text="Input a valid email"
        android:textColor="#F00"
        android:textStyle="bold"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/emptyPassword"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="217dp"
        android:text="Enter your password"
        android:textColor="#F00"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>